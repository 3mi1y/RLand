{{outlet}}
Sign-in form to RLand

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <button class="active btn" id="login-form-link" onclick="setLogin()">Login</button>
            </div>
            <div class="col-xs-6">
              <button class="active btn" id="register-form-link" onclick="setRegister()">Register</button>
            </div>
          </div>
          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <form id="login" class="form-horizontal" style="display:block;" {{action "login" on="submit"}}>
                {{#if loginFailed}}
                  <div class="alert">Invalid username or password</div>
                {{/if}}
                <div class="form-group">
                  <div class="form-label">
                    <label for="userNameInput">Username</label>
                  </div>
                  <div id="usernameInput" class="controls">
                    {{input value=username type="text"}}
                  </div>
                </div>
                <div class="form-group">
                  <div class="form-label">
                    <label for="passwordInput">Password</label>
                  </div>
                  <div id="passwordInput" class="controls">
                    {{input value=password type="password"}}
                  </div>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn" disabled={{isProcessing}}>Log in!</button>
                </div>
              </form>
              <form id="register" class="form-horizontal" style="display:block;" {{action "register" on="submit"}}>
                {{#if isRegistered}}
                  <script>$('#register').hide()</script>
                {{/if}}
                {{#if loginFailed}}
                  <div class="alert">Something went wrong</div>
                {{/if}}
                <div class="form-group">
                  <div class="form-label">
                    <label for="userEmailInput">Email</label>
                  </div>
                  <div id="userEmailInput" class="controls">
                    {{input value=email type="text"}}
                  </div>
                </div>
                <div class="form-group">
                  <div class="form-label">
                    <label for="userNameInput">Username</label>
                  </div>
                  <div id="usernameInput" class="controls">
                    {{input value=username type="text"}}
                  </div>
                </div>
                <div class="form-group">
                  <div class="form-label">
                    <label for="passwordInput">Password</label>
                  </div>
                  <div id="passwordInput" class="controls">
                    {{input value=password type="password"}}
                  </div>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn">Register!</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function setLogin() {
    $("#login").show();
    $("#register").hide();
  }

  function setRegister() {
    $("#register").show();
    $("#login").hide();
  }
</script>