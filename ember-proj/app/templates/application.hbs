{{!-- The following component displays Ember's default welcome message. --}}
{{!-- Feel free to remove this! --}}
<nav class="navbar navbar-default">
  <div class="nav-container container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"
              data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#unless authentication.isLoggedIn}}
         {{ link-to 'RLand' 'index' class="navbar-brand nav-link"}}
      {{/unless}}
   </div>
   <div class="collapse navbar-collapse" id="myNavbar">
      {{#if authentication.isLoggedIn}}
         <ul class="nav navbar-nav">
            <li>{{ link-to 'Dashboard' 'dashboard' class="nav-link" }}</li>
            <li>{{ link-to 'Map' 'map' class="nav-link" }}</li>
            <li>{{ link-to 'Social' 'social' class="nav-link" }}</li>
            <li>{{ link-to 'Charts' 'charts' class="nav-link" }}</li>
            <li>{{ link-to 'Profile' 'profile' class="nav-link" }}</li>
         </ul>
      {{else}}
         <ul class="nav navbar-nav">
            <li>{{ link-to 'About' 'about' class="nav-link" }}</li>
            <li>{{ link-to 'Features' 'about' class="nav-link" }}</li>
         </ul>
      {{/if}}
      <ul class="nav navbar-nav navbar-right">
         {{#if authentication.isLoggedIn}}
           <li><a href="#" {{action "logout"}} class="nav-link">Logout</a></li>
        {{else}}
           <li>{{ link-to 'Sign-up' 'register' class="nav-link" }}</li>
           <li>{{ link-to 'Login' 'login' class="nav-link" }}</li>
        {{/if}}
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  {{outlet}}
</div>
