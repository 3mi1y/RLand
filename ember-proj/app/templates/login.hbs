{{outlet}}
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="panel-body">
              <form id="login" class="form-horizontal" style="display:block;" {{action "login" on="submit"}}>
                {{#if loginFailed}}
                  <div class="alert">Invalid username or password</div>
                {{/if}}
                  <div class="row">
                    {{input value=email label="email" class="col s12" validate=True}}
                    {{input value=password type="password" label="Password" class="col s12"}}
                    <button type="submit">Log In</button>
                    {{#link-to 'register'}}Sign Up{{/link-to}}
                  </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
