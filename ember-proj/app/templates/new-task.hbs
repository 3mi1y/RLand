{{outlet}}
<div class="form-page-container">
<h1 class="form-title">New task for polygon: {{ model.name }}</h1>

<form class="form-container" {{action "addTask" on="submit"}}>
   <div>
      <label>Task Name:</label>
      <p>{{input class="input-element" value=name type="text"}}</p>
   </div>

   <div>
      <label>Task Description</label>
      <p>{{textarea class="input-element" value=description}}</p>
   </div>

   <datalist id="tickmarks">
   	<option value="1" label="1" />
        <option value="2" />
        <option value="3" />
        <option value="4" />
        <option value="5" label="5" />
        <option value="6" />
        <option value="7" />
        <option value="8" />
        <option value="9" />
        <option value="10" label="10" />
   </datalist>

   <div class="form-priority-bar">
      <label>Priority:</label>
      {{input value=priority type="range" min="1" max="10" list="tickmarks"}}
   </div>

   <div class="date-element">
      <label class="date-label">Select due date:</label>
      {{input type="date" value=dueDate}}
   </div>

   <button type="submit">Submit</button>
</form>
</div>
