{{outlet}}
<div class="container">
  <div class="row">
    <div class="panel-body">
      <form id="register" class="form-horizontal" style="display:block;" {{action "register" on="submit"}}>
        <div class="row">
          <div id="errors" class="alert alert-warning" style="display:none;"></div>

	  <p>Profile</p>
          {{input value=name label="Your Name" class="col s12"}}
          {{input value=email label="Email" class="col s12" validate=True}}
          {{input value=password type="password" label="Password" class="col s12"}}

	  <p>Address</p>
          {{input value=street label="Street" class="col s12"}}
          {{input value=city label="City" class="col s12"}}
          {{input value=state label="State" class="col s12"}}
          {{input value=zip label="Zipcode" class="col s12"}}

          <button type="submit">Create Account</button>
        </div>
      </form>
    </div>
  </div>
</div>
