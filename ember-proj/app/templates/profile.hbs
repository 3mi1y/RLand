<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel">
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <form id="password" class="form-horizontal" style="display:block;" {{action "login" on="submit"}}>
                {{#if loginFailed}}
                  <div class="alert">Invalid password</div>
                {{/if}}
                <div class="form-group">
                  <div class="form-label">
                    <label for="oldPasswordInput">Current Password</label>
                  </div>
                  <div id="oldPasswordInputt" class="controls">
                    {{input value=oldPassword type="password"}}
                  </div>
                </div>
                <div class="form-group">
                  <div class="form-label">
                    <label for="newPasswordInput">New Password</label>
                  </div>
                  <div id="newPasswordInput" class="controls">
                    {{input value=password type="password"}}
                  </div>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn" disabled={{isProcessing}}>Change Password!</button>
                </div>
              </form>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="form-group">
              <label for="label">Current Address</label>
            </div>
            <div id="address" class="controls">
              1234 Magnificent Ln, Missoula, MT 59123
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
