Profile page

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel">
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <form id="password" class="form-horizontal" style="display:block;  border:thin solid black; text-align: center;" {{action "updatePassword" on="submit"}}>
                {{#if loginFailed}}
                  <div class="alert">Invalid password</div>
                {{/if}}
                <div class="form-group">
                  <div class="form-label">
                    <label for="oldPasswordInput">Current Password</label>
                  </div>
                  <div id="oldPasswordInputt" class="controls">
                    {{input value=oldPassword type="password"}}
                  </div>
                </div>
                <div class="form-group">
                  <div class="form-label">
                    <label for="newPasswordInput">New Password</label>
                  </div>
                  <div id="newPasswordInput" class="controls">
                    {{input value=password type="password"}}
                  </div>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn" disabled={{isProcessing}}>Change Password!</button>
                </div>
              </form>
              <br>
              <div class="container" style="width:100%; border:thin solid black;">
                <div class="form-label">
                  <label for="label">Current Address</label>
                </div>
                <div id="address" class="controls">
                  1234 Magnificent Ln, Missoula, MT 59123
                </div>
              </div>
              <br>
              <form id="address" class="form-horizontal" style="display:block;  border:thin solid black; text-align: center;" {{action "updateAddress" on="submit"}}>
                <div class="form-group">
                  <div class="form-label">
                    <label for="street">Street</label>
                  </div>
                  <div id="street" class="controls">
                    {{input value=newAddress type="text"}}
                  </div>
                  <div class="form-label">
                    <label for="city">City</label>
                  </div>
                  <div id="city" class="controls">
                    {{input value=newCity type="text"}}
                  </div>
                  <div class="form-label">
                    <label for="state">State</label>
                  </div>
                  <div id="state" class="controls">
                    {{input value=newState type="text"}}
                  </div>
                  <div class="form-label">
                    <label for="zipcode">Zipcode</label>
                  </div>
                  <div id="zipcode" class="controls">
                    {{input value=newZipcode type="text"}}
                  </div>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn" disabled={{isProcessing}}>Change Address!</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
